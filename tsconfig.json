{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@css/*": [
        "src/assets/css/*"
      ],
      "~/assets/*": [
        "src/assets/*"
      ],
    }
  }
}